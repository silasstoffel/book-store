{
    "name": "mongoose-sidecar",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/mongoose-sidecar/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nx/esbuild:esbuild",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/packages/mongoose-sidecar",
                "main": "packages/mongoose-sidecar/src/index.ts",
                "tsConfig": "packages/mongoose-sidecar/tsconfig.lib.json",
                "assets": ["packages/mongoose-sidecar/*.md"],
                "generatePackageJson": true,
                "format": ["cjs"]
            }
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": [
                    "packages/mongoose-sidecar/**/*.ts",
                    "packages/mongoose-sidecar/package.json"
                ]
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "packages/mongoose-sidecar/jest.config.ts",
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            }
        }
    },
    "tags": []
}
