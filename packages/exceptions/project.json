{
    "name": "exceptions",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/exceptions/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nx/js:tsc",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/packages/exceptions",
                "main": "packages/exceptions/src/index.ts",
                "tsConfig": "packages/exceptions/tsconfig.lib.json",
                "assets": ["packages/exceptions/*.md"]
            }
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": [
                    "packages/exceptions/**/*.ts",
                    "packages/exceptions/package.json"
                ]
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "packages/exceptions/jest.config.ts",
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            }
        }
    },
    "tags": []
}
